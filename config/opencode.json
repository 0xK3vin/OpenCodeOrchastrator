{
  "$schema": "https://opencode.ai/config.json",
  "default_agent": "orchestrator",
  "plugin": [
    "opencode-anthropic-auth@latest"
  ],
  "agent": {
    "orchestrator": {
      "permission": {
        "task": {
          "*": "deny",
          "plan": "allow",
          "build": "allow",
          "debug": "allow",
          "devops": "allow",
          "explore": "allow"
        }
      }
    },
    "plan": {
      "permission": {
        "task": {
          "*": "deny"
        }
      }
    },
    "build": {
      "permission": {
        "task": {
          "*": "deny"
        }
      }
    },
    "debug": {
      "permission": {
        "task": {
          "*": "deny"
        }
      }
    },
    "devops": {
      "permission": {
        "task": {
          "*": "deny"
        }
      }
    },
    "explore": {
      "permission": {
        "task": {
          "*": "deny"
        }
      }
    },
    "review": {
      "permission": {
        "task": {
          "*": "deny"
        }
      }
    }
  },
  "mcp": {
    "megamemory": {
      "type": "local",
      "command": [
        "megamemory"
      ],
      "enabled": true
    },
    "exa": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-remote",
        "https://mcp.exa.ai/mcp?tools=web_search_exa,get_code_context_exa,crawling_exa"
      ],
      "enabled": true
    },
    "grep_app": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": true
    }
  }
}
